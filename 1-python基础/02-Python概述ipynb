    "\n",
    "# 单双引号交错使用的例子\n",
    "# <a style=\"color:red\"> 哈哈哈</a>\n",
    "# 用引号表示上面字符串\n",
    "html = 'a style=\"color:red\">哈哈哈</a>'\n",
    "\n",
    "\n",
    "htmls =  '''\n",
    "i love wangxiaojing\n",
